# ==============================================
# WEKEY TOOLS - КОНФИГУРАЦИЯ ОКРУЖЕНИЯ
# ==============================================

# Сервер
NODE_ENV=development
PORT=8880

# База данных SQLite (для разработки)
DB_DIALECT=sqlite
DB_STORAGE=./database.sqlite

# Альтернативно: MySQL для продакшена
# DB_DIALECT=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=wekey_tools
# DB_USER=root
# DB_PASSWORD=your_password

# JWT токены (ИЗМЕНИТЬ ДЛЯ ПРОДАКШЕНА!)
JWT_SECRET=wekey-tools-super-secret-key-for-development-only
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL для CORS
FRONTEND_URL=http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Админ аккаунт
ADMIN_EMAIL=admin@wekey.tools
ADMIN_PASSWORD=admin123

# Google PageSpeed Insights API
GOOGLE_PAGESPEED_API_KEY=your_google_api_key

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8880/auth/google/callback

# ==============================================
# EMAIL КОНФИГУРАЦИЯ
# ==============================================

# Выберите провайдера: console, gmail, mailtrap, sendgrid
EMAIL_PROVIDER=console
EMAIL_FROM=noreply@wekeytools.com

# Gmail SMTP (для продакшена)
# 1. Включите 2FA в Google аккаунте
# 2. Создайте App Password: https://myaccount.google.com/apppasswords
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_16_char_app_password

# Mailtrap (для тестирования)
# Зарегистрируйтесь на https://mailtrap.io/
MAILTRAP_HOST=live.smtp.mailtrap.io
MAILTRAP_PORT=587
MAILTRAP_USER=api
MAILTRAP_PASS=your_mailtrap_api_token

# SendGrid (для высоких объемов)
# Зарегистрируйтесь на https://sendgrid.com/
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Общие настройки email
EMAIL_SECURE=true
EMAIL_TIMEOUT=10000

# ==============================================
# ПЛАТЕЖНЫЕ СИСТЕМЫ (для будущего)
# ==============================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Логирование
LOG_LEVEL=debug